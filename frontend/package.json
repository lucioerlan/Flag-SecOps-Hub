{
  "name": "flag-secops-hub-frontend",
  "version": "1.0.0",
  "description": "Frontend para o projeto Flag SecOps Hub",
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "build-storybook -s public",
    "clean": "rm -rf coverage dist && rm -rf node_modules",
    "commit": "cz",
    "dev": "vite",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx}",
    "lint": "eslint . --fix && prettier --write .",
    "lint-staged-husky": "lint-staged",
    "preview": "vite preview",
    "release": "release-it",
    "start": "serve -s dist",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "jest --coverage --passWithNoTests --silent",
    "test:cypress:open": "cypress open",
    "test:cypress:run": "cypress run --browser chrome --headless",
    "test:clear": "jest --clearCache",
    "test:dev": "jest --verbose --watch",
    "test:quick": "jest --passWithNoTests --silent",
    "test:update": "jest --updateSnapshot",
    "update-dependencies": "npx npm-check-updates -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucioerlan/Flag-SecOps-Hub.git"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "author": "Erlan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucioerlan/Flag-SecOps-Hub/issues"
  },
  "homepage": "https://github.com/lucioerlan/Flag-SecOps-Hub#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/types": "^18.4.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@storybook/react": "^7.2.1",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "commitizen": "^4.3.0",
    "cypress": "^13.6.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "release-it": "^17.0.1",
    "ts-jest": "29.0.5",
    "typescript": "^4.9.5",
    "vite": "^4.4.7",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "dependencies": {
    "i18next": "^23.4.1",
    "i18next-browser-languagedetector": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^13.0.3",
    "react-router-dom": "^5.3.0",
    "react-scripts": "5.0.1",
    "serve": "^14.2.1"
  }
}
