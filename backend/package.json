{
  "name": "flag-secops-hub-backend",
  "version": "1.0.0",
  "description": "Backend para o projeto Flag SecOps Hub",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "clean": "rm -rf coverage dist && rm -rf node_modules",
    "commit": "cz",
    "compile": "rm -rf ./dist && tsc",
    "dev": "nodemon",
    "format": "prettier --write src/** tests/**",
    "lint": "eslint src/** tests/** --fix",
    "lint-and-format": "npm run lint && npm run format",
    "lint-staged-husky": "lint-staged",
    "patch": "npm version patch -m \"release: version %s\" && git push --tags && git push",
    "release": "release-it",
    "start": "node -r ./tsconfig-paths-dist.js ./dist/app.js",
    "test": "jest --coverage --passWithNoTests --silent",
    "test:dev": "jest --verbose",
    "test:quick": "jest --passWithNoTests --silent",
    "update-dependencies": "npx npm-check-updates -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucioerlan/Flag-SecOps-Hub.git"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "author": "Erlan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucioerlan/Flag-SecOps-Hub/issues"
  },
  "homepage": "https://github.com/lucioerlan/Flag-SecOps-Hub#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@commitlint/types": "^18.4.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.1",
    "pretty-quick": "3.1.3",
    "release-it": "^17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/helmet": "^11.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  }
}
